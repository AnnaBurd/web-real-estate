---
interface Props {
  id?: string;
}

const { id } = Astro.props;

const attributes = id ? { id } : {}; // optionally add id attribute
---

<button
  {...attributes}
  class="uppercase text-xs tracking-tight font-semibold px-5 py-3 text-opacity-80 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#607cb3] focus-visible:border-[#607cb344] focus-visible:outline-none rounded-full"
  ><slot /></button
>
