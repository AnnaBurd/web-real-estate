---
interface Props {
  href: string;
  isActive?: boolean;
}

const { href, isActive } = Astro.props;
---

<li class="w-full px-2 py-1">
  <a
    href={href}
    class=` block uppercase text-sm tracking-tight font-semibold px-4 py-4 text-opacity-80 rounded-lg w-full  ${isActive? 'bg-[--color-accent] text-white' : ""} hover:bg-[--color-accent] hover:text-white transition-colors duration-200`
  >
    <slot />
  </a>
</li>
