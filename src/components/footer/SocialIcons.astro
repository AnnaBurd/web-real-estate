---
import Facebook from "./icons/Facebook.astro";
import Zalo from "./icons/Zalo.astro";

interface Props {
  className?: string;
  facebookRef?: string;
  zaloRef?: string;
}

const { className, facebookRef, zaloRef } = Astro.props;
---

<div class=`flex items-center gap-1.5 ${className ? className : ""}`>
  <a
    href={facebookRef ? facebookRef : "#"}
    target="_blank"
    rel="noopener"
    class="text-[--color-grey-light] md:w-10 md:h-10 w-7 h-7 block opacity-20 hover:opacity-60 transition-opacity duration-150 tabbable rounded-full"
  >
    <Facebook />
  </a>

  <a
    href={zaloRef ? zaloRef : "#"}
    target="_blank"
    rel="noopener"
    class="text-[--color-grey-light] md:w-10 md:h-10 w-7 h-7 block opacity-20 hover:opacity-60 transition-opacity duration-150 tabbable rounded-full"
  >
    <Zalo />
  </a>
</div>
